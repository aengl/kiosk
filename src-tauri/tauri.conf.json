{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "kiosk-app",
  "version": "0.1.0",
  "identifier": "com.aen.kiosk-app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "kiosk-app",
        "width": 800,
        "height": 600,
        "fullscreen": true,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png",
      "icons/icon.icns"
    ]
  }
}
